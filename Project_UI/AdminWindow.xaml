<Window x:Class="Project_UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_UI"
        mc:Ignorable="d"
        Title="AdminWindow"
        Height="500"
        Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        StateChanged="Window_StateChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
            Height="Auto"/>
            <RowDefinition
            Height="Auto"/>
            <RowDefinition/>
            <RowDefinition
            Height="Auto"/>
        </Grid.RowDefinitions>

        <Border
        Name="TopPanel"
        Grid.Row="0"
        MouseDown="Window_MouseDown"
        Style="{StaticResource TopPannel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition
                    Width="Auto"/>
                    <ColumnDefinition
                    Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                Grid.Row="0"
                Text="PlotterPRO"
                FontSize="15"
                FontWeight="Bold"
                Foreground="LightGray"
                Margin="5,0"/>

                <StackPanel
                Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                    <Button
                    x:Name="MinimizeButton"
                    Click="MinimizeButton_Click"
                    ToolTip="Свернуть"
                    Style="{StaticResource WindowControlButton}">
                        <Button.Content>
                            <Path
                            Data="{StaticResource MinimizeButton}"
                            Width="10"
                            Height="1"
                            Fill="White"
                            Stretch="Uniform"/>
                        </Button.Content>
                    </Button>
                    <Button
                    x:Name="MaximizeRestoreButton"
                    Click="MaximizeRestoreButton_Click"
                    ToolTip="Развернуть"
                    Style="{StaticResource WindowControlButton}">
                        <Button.Content>
                            <Path
                            x:Name="MaximizeRestoreButtonIcon"
                            Data="{StaticResource MaximizeButton}"
                            Width="10"
                            Height="8"
                            Fill="White"
                            Stretch="Uniform"/>
                        </Button.Content>
                    </Button>
                    <Button
                    x:Name="CloseButton" 
                   Click="CloseButton_Click"
                    ToolTip="Закрыть"
                    Style="{StaticResource CloseButton}">
                        <Button.Content>
                            <Path
                            Data="{StaticResource Exitbutton}"
                            Width="10"
                            Height="10"
                            Fill="White"
                            Stretch="Uniform"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border
        x:Name="SearchBar"
        Grid.Row="1"
        Background="BlanchedAlmond"
        Style="{StaticResource SearchBar}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button
                    Click="UserModeButton_Click"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    ToolTip="Режим обычного пользователя"
                    Margin="20,0,0,0"
                    Padding="5,0,0,0"
                    Width="40"
                    Height="40">
                    <Button.Content>
                        <Path
                            Data="{StaticResource UserXMark}"
                            Width="30"
                            Height="30"
                            Fill="Black"
                            Stretch="Uniform"/>
                    </Button.Content>
                </Button>

                <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right">

                    <TextBlock
                    Text="Поиск по названию:"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,9,5,0"/>

                    <TextBox
                    x:Name="SearchBox"
                    Text="{Binding ModelSearchText, UpdateSourceTrigger=PropertyChanged}"
                    Height="25"
                    Width="200"
                    Padding="0,5,0,0"
                    Margin="0,0,5,0"/>

                    <Button
                    x:Name="SearchButton"
                    Command="{Binding ApplyFiltersCommand}"
                    ToolTip="Поиск"
                    Margin="0,0,20,0"
                    Style="{StaticResource SearchButton}">
                        <Button.Content>
                            <Path
                            Data="{StaticResource MagnifyingGlass}"
                            Width="20"
                            Height="20"
                            Fill="Black"
                            Stretch="Uniform"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>

        </Border>

        <Border
            x:Name="MainContent"
            Grid.Row="2"
            Style="{StaticResource MainContent}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                         Width="725"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        TextAlignment="Center"
                        Text="Свойства объекта:"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="Black"
                        Background="LightGray"
                        Padding="0,3"/>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <Grid x:Name="InputGrid" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>

                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Модель:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPlotter.Model, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Производитель:" VerticalAlignment="Center" Margin="5"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding AllManufacturers}"
                                          SelectedItem="{Binding SelectedPlotter.Manufacturer, Mode=TwoWay}"
                                          IsEditable="True" Margin="5"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Габариты:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPlotter.Dimensions, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Доп. информация:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedPlotter.Addendum, UpdateSourceTrigger=PropertyChanged}" Margin="5" AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Путь к изображению:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedPlotter.PathToImage, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Цена:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedPlotter.Price, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Ширина печати:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding SelectedPlotter.Width, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Вес:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding SelectedPlotter.Weight, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Наличие ЖД:" VerticalAlignment="Center" Margin="5"/>
                                <CheckBox Grid.Row="8" Grid.Column="1" IsChecked="{Binding SelectedPlotter.HasHardDrive}" VerticalAlignment="Center" Margin="5"/>

                                <Rectangle Grid.Row="9" Grid.ColumnSpan="3" Fill="LightGray" Height="1" Margin="0,5,0,5"/>

                                <TextBlock Grid.Row="10" Grid.Column="0" Text="Тип плоттера:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="10" Grid.Column="1" ItemsSource="{Binding PlotterTypeOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Row="11" Grid.Column="0" Text="Способ нанесения:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="11" Grid.Column="1" ItemsSource="{Binding DrawingMethodOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Row="12" Grid.Column="0" Text="Тип подачи материала:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="12" Grid.Column="1" ItemsSource="{Binding PositioningOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" GroupName="PositioningGroup" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Row="13" Grid.Column="0" Text="Тип печати:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="13" Grid.Column="1" ItemsSource="{Binding PrintingTypeOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Row="14" Grid.Column="0" Text="Формат печати:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="14" Grid.Column="1" ItemsSource="{Binding PaperFormatOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock Grid.Row="15" Grid.Column="0" Text="Тип материала:" FontWeight="Bold" Margin="5,10,5,5"/>
                                <ItemsControl Grid.Row="15" Grid.Column="1" ItemsSource="{Binding MaterialOptions}" Margin="5,0,5,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </ScrollViewer>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Сохранить" Width="100" Height="30" Command="{Binding SavePlotterCommand}" Margin="5"/>
                            <Button Content="Отмена" Width="100" Height="30" Command="{Binding CancelEditCommand}" Margin="5"/>
                            <Button Content="Удалить" Width="100" Height="30" Command="{Binding DeletePlotterCommand}" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                        <Button Content="Создать новый плоттер" Command="{Binding CreateNewPlotterCommand}" Margin="20,0,0,0" Width="180" Height="30"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" ItemsSource="{Binding AllPlotters}"
                             SelectedItem="{Binding SelectedPlotter}"
                             DisplayMemberPath="Model" Margin="5" />
                </Grid>
            </Grid>
        </Border>

        <Border
            x:Name="BottomPanel"
            Grid.Row="3"
            ToolTip="LowBarToolTip"
            Style="{StaticResource BottomPanel}">
            <TextBlock
                Text="© 2025 Группа 434. Все права защищены."
                FontSize="8"
                HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
